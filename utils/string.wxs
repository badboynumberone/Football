module.exports = {
  split: function (str) {
    return str.split(',');
  },
  getSplitFirst: function (str) {
    return str.split(',')[0];
  },
  trim: function(str){
    return str.trim();
  },
  //星级评定
  mapLevel:function(str){
    switch(str){
      case "1" : {return '一星级';}
      case "2" : {return '二星级';}
      case "3" : {return '三星级';}
      case "4" : {return '四星级';}
      case "5" : {return '五星级';}
      case "6" : {return '六星级';}
      case "7" : {return '七星级';}
      case "8" : {return '八星级';}
      case "9" : {return '九星级';}
    }
  },
	//裁剪字符
	sub:function(str){
		return str.substring(0,10)
  },
  //星级评定样式映射
  mapStatus:function(str){
    switch(str){
      case "0" : {return 'red';}
      case "1" : {return 'red';}
      case "2" : {return 'grey';}
      case "3" : {return 'green';}
      case "4" : {return 'red';}
    }
  },
}