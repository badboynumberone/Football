.fill{
    width: 100%;
    height: 100%;
}
.comment_item{
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    border-bottom: 1rpx solid #f1f1f1;
}
.user_img{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
    background: #666;
}
.comment_to{
    font-size: 28rpx;
    font-weight: bold;
}
.comment_time{
    font-size: 24rpx;
    color: #ccc;
}
.comment_content{
    font-size: 26rpx;
    color: #333;
}

