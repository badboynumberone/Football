@import '/common.wxss';

.register_container{
    background: #f1f1f1;
    margin-bottom: 40rpx;
}
.register_bg{
    width: 100%;
    height: 250rpx;
}
.register{
    width: 90%;
    padding: 30rpx 20rpx;
    margin: 0rpx auto;
    background: #fff;
    border-radius: 10rpx;
    position: relative;
    z-index: 0;
    top: -100rpx;
    -moz-box-shadow:0px 2px 4px #858585; -webkit-box-shadow:0px 2px 4px #858585; box-shadow:0px 2px 4px #858585;
}
.title{
    display: flex;
    align-items: center;
}
.title >text{
    
    color: #666;
}
.form-view{
    font-size: 16px;
}
.form-group{
    padding: 20rpx 0;
    height: 166rpx;
}
.form-control{
    margin-top: 25rpx;
    font-size: 30rpx;
    background: #EFF3F6;
    border-radius: 5rpx;
    overflow: hidden;
    position: relative;
}
.picker{
    font-size: 30rpx;
    padding: 10rpx 0;
}
.img_wrapper{
    width: 150rpx;
    height: 150rpx;
}
.tips{
    font-size: 28rpx;
    color: #666;
}
.submit-wrviewp{
    position: fixed;
    bottom:0rpx;
    left: 0rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 10rpx 30rpx;
    height: 100rpx;
    color: #fff;
    overflow: hidden;
    z-index: 9;
}
.submit-wrviewp > .submit-btn{
    width: 100%;
    height: 100%;
}
.submit-wrviewp .btn_wrapper {
    display: flex;
    width: 100%;
    height: 100%;
}
.submit-wrviewp .btn_wrapper > .submit-btn{
    flex: 1;
    margin: 0 10rpx;
}
.submit-wrviewp .submit-btn{
    background: #63922F;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}



.select-input{
    padding: 8rpx 0;
}
.van-field__input{
    background: #EFF3F6 !important;
}
.unactive{
    color: #808080;
}
.down_arrow{
    position: absolute;
    right:10rpx;
    width: 30rpx;
    height: 20rpx;
}
.form-control .van-cell{
    padding: 0rpx !important;
}
.star_item{
    padding: 30rpx 0;
    font-size: 30rpx;
    display: flex;
    justify-content:space-between;
    border-bottom:1rpx solid #f1f1f1;
}
.grey{
    color:#666;
}
.green{
    color: #63922F
}
.red{
    color: #f94d0a;
}
