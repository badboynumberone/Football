@import '/common.wxss';
.main{
    background:#f1f1f1;
}
.rate_bg{
    width: 100%;
    height: 250rpx;
    transform: translateY(50rpx)
}
.rate-wrap{
    width: 90%;
    padding: 30rpx 20rpx;
    margin: 0rpx auto;
    background: #fff;
    border-radius: 10rpx;
    position: relative;
    top: -100rpx;
    -moz-box-shadow:0px 2px 4px #858585; -webkit-box-shadow:0px 2px 4px #858585; box-shadow:0px 2px 4px #858585;
}
.panel-title{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.star_level{
    display: flex;
    align-items: center;
}
.panel-title >text{
    font-size: 16px;
    color: #666;
}
.form-text{
    font-size: 16px;
}
.looking-text{
    font-size: 24rpx;
    color: #666;
    margin-left: 10rpx;
}
.form-image{
    width: 150rpx;
    height: 150rpx;
    margin-right:10rpx;
    margin-bottom: 10rpx; 
}
.certificate_num{
    font-size: 30rpx;
    color: #666;
}
.form-label{
    font-size: 16px;
}
.form-control{
    margin-top: 25rpx
}
.video{
    width:150rpx; height:150rpx;margin-right:10rpx;margin-bottom: 10rpx;
}