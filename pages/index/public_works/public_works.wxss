view,text{
    padding: 0rpx;
    margin: 0rpx;
    box-sizing: border-box;
}
.clearfix:after { display: table; content: " "; clear: both;}

.clearfix{ zoom: 1;}
.fill{
    width: 100%;
    height: 100%;
}
.main{
    padding-bottom: 100rpx
}
.text-hidden{
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.works_select{
    display: flex;
    
}
.works_select view{
    flex: 1;
    display: flex;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    padding: 0rpx 10rpx;
    height: 200rpx;
    font-size: 30rpx;
    background: #f1f1f1;
    background-clip: content-box;
}
.works_select view image{
    width: 100rpx;
    height: 50rpx;
    margin-bottom: 20rpx;
}
.works_title{
    display: flex;
    padding: 25rpx 10rpx;
    border-bottom: 1rpx solid #FAFAFA;
    align-items: center;
}
.works_list{
    display: flex;
    flex-flow: row wrap;
    padding: 25rpx 25rpx 0rpx;
}
.list_item{
    width: 150rpx;
    line-height: 150rpx;
    position: relative;
    margin-right: 24rpx;
    margin-bottom: 20rpx;
}
.delete_item{
    position: absolute;
    top:-20rpx;
    right:-20rpx;
    width: 30rpx;
    height: 30rpx;
}
.video_time{
    position: absolute;
    
    bottom:-50rpx;
    right:1rpx;
    font-size: 28rpx;
    color: #fff;
}
.mark{
    position: absolute;
    top: 100rpx;
    left: 0rpx;
    width: 100%;
    height: 50rpx;
    background: linear-gradient(rgba(255,255,255,0), rgba(0,0,0,0.3));
    z-index: 9;
}
.add_item{
    width: 150rpx;
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 80rpx;
    color: #A5A5A5;
    background: #F2F2F2;
}
.add_item text{
    position: relative;
    top: -8rpx;
}
.work_title_tag{
    margin-right: 10rpx;
    font-size: 30rpx;
}
.input_title{
    flex: 1;
    font-size: 30rpx;
}
textarea{
    width: 100%;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}
.works_intro{
    padding: 0 10rpx;
    position: relative;
    border-bottom: 1rpx solid #FAFAFA;
}
.letter_count{
    position: absolute;
    bottom: 10rpx;
    right:20rpx;
    font-size: 30rpx;
    color:#ccc;
}
.location_wrapper{
    
    border-bottom:1px solid #f1f1f1;
}
.add_tag{
    display: flex;
    padding: 20rpx 10rpx;
    flex-flow: row wrap;
}
.tag{
    padding: 10rpx 20rpx;
    background: #63922F;
    color: #fff;
    position: relative;
    margin: 0 20rpx 20rpx 0 ;
}
.delete_tag{
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    top: -10px;
    right: -5px;
}
.add_key{
    background: #fff;
    border:1px dashed #63922F;
    color: #63922F;
}
.intro_tag{
    padding: 0 10rpx;
}
.intro_tag_title{
    color: #8D8D8D;
    height: 80rpx;
    font-size: 15px;
}
.intro_keywords{
    display: flex;
    flex-flow: row wrap;
}
.keywords_item{
    font-size: 33rpx;
    padding: 10rpx 20rpx;
    background: #f1f1f1;
    margin: 0 20rpx 20rpx 0;
    font-size: 14px;
}
.public_btn{
    width: 100%;
    text-align: center;
    line-height: 100rpx;
    background: #63922F;
    color: #fff;
    position: fixed;
    bottom: 0px;
}
.input_field{
    position: fixed;
    bottom:0px;
    padding: 10rpx 20rpx;
    background: #f1f1f1;
    width: 100%;
}
.add_class{
    width: 100%;
    height: 50rpx;
}
.input_field_wrapper{
    border-radius: 50rpx;
    overflow: hidden;
    background: #f1f1f1 !important;
}
.input_field .van-cell{
    padding: 5rpx 20rpx !important;
    
}
.tag_content{
    font-size: 14px;
}
.works_title .van-cell{
    padding-left: 5rpx !important;
}