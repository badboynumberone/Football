@import '/common.wxss';
.personal_info{
    border-bottom: 10rpx solid #F1F1F1;
}
.personal_info_top{
    display: flex;
    padding: 20rpx 30rpx;
    align-items: center;
    border-bottom:1rpx solid #F5F5F5;
    position: relative;
}
.personal_info_top:after{
    position: absolute;
    content:"";
    top:0px;
    background: #E0E0E0;
    width: 780rpx;
    left: -30rpx;
    height: 1rpx;
}
.personal_header_wrapper{
    width: 150rpx;
    height: 150rpx;
    overflow: hidden;
    border-radius: 50%;
    margin-right: 30rpx;
}
.personal_name{
    font-size: 35rpx;
    font-weight: bold;
}
.personal_autograph{
    font-size: 30rpx;
    color: #ccc;
    height: 60rpx;
    margin-top: 5rpx;
}


.personal_item{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.personal_num{
    font-weight: bold;
    line-height: 70rpx;
    font-size: 32rpx;
}
.personal_item_name{
    font-size: 30rpx;
    color: #767676;
}

.works{
    font-size: 35rpx;
    position: relative;
}

.works_content{
    display: flex;
    flex-flow: row wrap;
}
.works_item{
