

view{
    padding: 0rpx;
    margin: 0rpx;
    box-sizing: border-box;
}
.fill{
    width: 100%;
    height: 100%;
}
.img_bg{
    background: #ccc;
}
.layout{
    width: 95%;
    margin: 0 auto;
}
.title{
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp:2;
   overflow: hidden;
   font-size: 40rpx;
   font-weight: bold;
   margin-bottom: 30rpx;
}
.img_video_wrapper{
    width: 100%;
    margin-bottom: 30rpx;
}
.banner_info{
    margin: 30rpx 0;
    font-size: 32rpx;
    letter-spacing: 2rpx;
    line-height: 60rpx;
}
.activity_link_wrapper{
    margin: 30rpx 0;
}
.activity_link{
    font-size: 32rpx;
}
.activity_link text{
    color: #77A4FA;
}
.go_jion{
    margin: 10rpx auto;
    width: 100%;
    padding: 25rpx 0;
    text-align: center;
    background: #63912F;
    color: #fff;
    font-size: 32rpx;
    border-radius: 5rpx;
}

