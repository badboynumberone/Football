<view class="main" wx:if="{{bannerDetail}}">
    <view class="layout">
        <!--标题-->
        <text class="title">{{bannerDetail.bannTitle}}</text>
        <view class="banner_content">
            <!--图片-->
            <view class="img_video_wrapper">
                <image wx:if="{{bannerDetail.bannImg}}" class="activity_img" src="{{bannerDetail.bannImg}}"  lazy-load="false" style="width:100%;height:450rpx" >
                </image>
                <video wx:if="{{bannerDetail.bannVoid}}" class="activity_video" src="{{bannerDetail.bannImg}}" style="width:100%">
                </video>
            </view>
            <!--内容-->
            <text class="banner_info">{{bannerDetail.content}}</text>
            <!--活动链接-->
            <view class="activity_link_wrapper">
                <text class="activity_link" selectable="false" space="false" decode="false">活动链接 <text>http://huodong.com</text></text> 
            </view>
            <!--去参加-->
            <view class="go_jion">
                去参加
            </view>
        </view>
    </view>
</view>