<view class="main">
    <!--编辑项目栏目-->
    <view class="edit_content" >
        <view class="item" hover-class="bg" bindtap="chooseImage">
            <view class="title">
                头像
            </view>
            <view class="content">
                <view class="content_wrapper">
                    <image class="header_img_wraper" src="{{userHeader}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload=""/>
                </view>
                <image class="arrow" src="../../../images/xjjt.png" />
            </view>
        </view>

        <view class="item" hover-class="bg">
            <view class="title" bindtap="hanle">
                昵称
            </view>
            <view class="content">
                <view class="content_wrapper" style="position:absolute;right:16px">
                    <input type="text" value="{{userName}}" placeholder="请输入用户名" placeholder-style='text-align:right' style="width:200rpx;text-align:right" data-name="userName" bindfocus="onFocus" bindinput="onChange" maxlength="10" bindblur="onBlur"/>
                </view>
                <view bindtap="clear" hover-class="none" hover-stop-propagation="false" style="position:relative;right:-6rpx;top:4rpx">
                    <image wx:if="{{isClearShow}}" class="arrow" src="../../../images/ssqc@2x.png" style="width:30rpx;height:30rpx" />
                </view>
                
            </view>
        </view>

        <view class="item" hover-class="bg" bindtap="handleClick">
            <view class="title">
                性别
            </view>
            <view class="content">
                <view class="content_wrapper">
                    <picker bindchange="bindSexChange" value="{{sexArray[sexIndex]}}" range="{{sexArray}}" id="sexpicker">
                        <view class="{{sexOffset?'picker':'picker unactive'}}">
                            {{sexArray[sexIndex]}}
                        </view>
                    </picker>
                </view>
                <image class="arrow" src="../../../images/xjjt.png" />
            </view>
        </view>

        <view class="item" hover-class="bg">
            <view class="title">
                生日
            </view>
            <view class="content">
                <view class="content_wrapper">
                    <picker mode="date"  start="1940-01-01" end="{{nowDate}}" bindchange="bindDateChange">
                        <view class="{{birthDay != ''?'picker':'picker unactive'}}">
                            {{birthDay || '未填写'}}
                        </view>
                    </picker>
                </view>
                <image class="arrow" src="../../../images/xjjt.png" />
            </view>
        </view>
        
        <view class="item" style="border:none;height:120rpx;">
            <view class="title">
                个性签名
            </view>
            <view class="content" style="margin-top:127rpx">
                <view class="content_wrapper" style="margin-right:20rpx">
                    <textarea class="textarea" value="{{ signature }}" bindinput="getText" placeholder="世界很单纯，人生也一样。不是世界复杂，而是你把世界复杂了"/>
                </view>
            </view>
        </view>
    </view>
    <!--保存按钮-->
    <view class="" bindtap="preserve">
        <bottom-btn text="保存" ></bottom-btn>
    </view>
    
</view>