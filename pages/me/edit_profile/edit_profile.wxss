@import '/common.wxss';
.item{
    display: flex;
    justify-content: space-between;
    padding: 0rpx 20rpx;
    width: 100%;
    height: 120rpx;
    border-bottom: 1rpx solid #f1f1f1;
    font-size: 30rpx;
    align-items: center;
    position: relative;
}
.content_wrapper{
    display: flex;
    align-items: center;
}
.content_wrapper image{

    margin-left: 40rpx;
}
.arrow{
    width: 15rpx;
    height: 25rpx;
}
.content{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
 .header_img_wraper{
    width: 90rpx;
    height: 90rpx;
    overflow: hidden;
    border-radius: 50%;
    background: #ccc;
    
}
.clear_padding .van-cell{
    padding: 0rpx !important;
}
.bg{
    background: #f1f1f1;
}
.item .van-cell{
    padding-top:0px !important; 
}
.picker{
    font-size: 30rpx;
    padding: 10rpx 0;
}
.unactive{
    color: #808080;
}

.textarea{
    font-size: 15px;
    width: 450rpx !important;
    height: 200rpx !important;
    padding: 0rpx;
    margin: 0rpx;
    position: relative;
    top: 9rpx
} 