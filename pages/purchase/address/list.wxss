/* pages/address/list.wxss */
.address-item{
  height: 88px;
  border-bottom: 1px solid #eee;
}

.check-wrap{
  box-sizing: border-box;
  width: 50px;
  height: 88px;
  float: left;
  padding: 33px 10px;
}

.edit-wrap{
  line-height: 50px;
  width: 50px;
  float: right;
  text-align: center;
  padding-top: 20px;
}

.address-info{
  padding: 10px 0px;
}

.address-info .name-phone{
  font-size: 16px;
  color: #111;
  font-weight: bold;
  margin-bottom: 5px;
}

.address{
  text-overflow: ellipsis;
  font-size: 13px;
  color: #333;
  white-space: normal;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  height: 36px;
  overflow: hidden;
}

.bottom-btn{
  width: 100%;
  box-sizing: border-box;
  height: 65px;
  padding: 10px;
  position: fixed;
  bottom: 0px;
}

.bottom-btn button{
  background: #62912f;
  width: 100%;
  height: 45px;
  color: #fff;
}

.empty {
  text-align:center;
  width: 100%;
  height: 350px;
  position: absolute;
  top: 50%;
  margin-top: -175px;
}