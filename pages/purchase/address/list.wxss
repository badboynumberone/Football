/* pages/address/list.wxss */
@import '/common.wxss';
.address-item{
  height: 88px;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.check-wrap{
  box-sizing: border-box;
  
  float: left;
  padding: 20px 10px;
}

.edit-wrap{
  line-height: 50px;
  width: 50px;
}

.address-info{
  padding: 10px 0px;
  flex: 1;
}

.address-info .name-phone{
  font-size: 16px;
  color: #111;
  font-weight: bold;
  margin-bottom: 5px;
}

.address{
  font-size: 13px;
  color: #333;
}

.bottom-btn{
  width: 100%;
  box-sizing: border-box;
  height: 65px;
  padding: 10px;
  position: fixed;
  bottom: 0px;
}

.bottom-btn button{
  background: #62912f;
  width: 100%;
  
  color: #fff;
}

.empty {
  text-align:center;
  width: 100%;
  height: 350px;
  position: absolute;
  top: 50%;
  margin-top: -175px;
}