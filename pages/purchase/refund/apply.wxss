/* pages/refund/apply.wxss */
@import "/common.wxss";

.order-header{
  padding-left: 10px;
  font-size: 13px;
  line-height: 26px;
  background: #fff;
  margin-bottom: 10px;
}

.order-header text{
  color: #df3f3f;
}

.order-products{
  background: #fff;
  padding-left: 10px;
}

.product-wrapper{
  border-bottom: 1px solid #eee;
  padding: 10px 10px 10px 0px;
  box-sizing: border-box;
  height: 120px;
}

.product-wrapper .product-img{
  width: 100px;
  height: 100px;
  display: table-cell;
  text-align: center;
  vertical-align: middle;
  float: left;
}

.product-wrapper .product-img image{
  max-width: 100px;
  max-height: 100px;
}

.product-wrapper .product-info{
  margin-left: 110px;
}

.product-wrapper .title,.product-wrapper .desc{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 22px;
  font-size: 14px;
  color: #222;
}

.product-wrapper .title{
  height: 44px;
  white-space: normal;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.product-wrapper .desc{
  font-size: 12px;
  color: #666;
  line-height: 18px;
}

.product-wrapper .price{
  color: #e13e3f;
  font-size: 18px;
  line-height: 28px;
}

.product-wrapper .num{
  float: right;
  font-size: 14px;
  color: #555;
}

.product-wrapper .price text{
  font-size: 12px;
}

.refund-money .van-cell__value{
  color: #df3f3f;
}

.upload{
  margin: 10px 0px 60px;
  background: #fff;
  padding: 0px 10px; 
}

.upload .title{
  font-size: 13px;
  line-height: 40px;
}

.upload .img-group{
  padding: 5px 0px;
  overflow: hidden;
}

.upload .img-wrapper{
  width: 100px;
  height: 100px;
  float: left;
  display: table-cell;
  vertical-align: middle;
  text-align: center;
  position: relative;
  margin-right: 10px;
  margin-bottom: 10px;
}

.upload .new-img{
  border: 1px dashed #eee;
  font-size: 60px;
  color: #eee;
  line-height: 90px;
}

.upload .img-wrapper image{
  max-width: 100px;
  max-height: 100px;
}

.upload .img-wrapper .close{
  position: absolute;
  right: -6px;
  top: -8px;
  z-index: 2;
}

.upload .tips{
  padding-bottom: 10px;
  font-size: 12px;
  color: #999;
}
.bottom-bar .van-button--danger{
  background-color: #df3f3f;
  border: 1px solid #df3f3f;
}